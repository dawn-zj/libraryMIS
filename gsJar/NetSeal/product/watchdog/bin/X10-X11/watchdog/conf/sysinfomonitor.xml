<?xml version="1.0" encoding="GBK"?>
<SysInfoMonitor>
	<Logger>
		<!--本地日志配置，必须-->
		<LocalLogger file="logs/sysinfomonitor.log" size="100MB" rollback="10"/>
		<!--远程日志配置，可选-->
		<SysLogger server="192.168.3.246" facility="local0"/>
	</Logger>
	<Collectors>
		<!--信息收集器配置。可以配置多个收集器，每个收集器启动一个线程处理-->
		<!--command:命令，必须
				interval:收集间隔时间，单位为秒，默认60，配置为小于或等于零的数字时，watchdog自动更正为60秒
				opensyslog:是否记录远程日志，默认false
		-->
		<Collector command="bin/getallsysinfo.sh" interval="60" opensyslog="yes"/>
	</Collectors>
</SysInfoMonitor>
